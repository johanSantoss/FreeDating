<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Person">

        <EditTextPreference
            app:key="keyName"
            app:title="Name"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="18"
            app:entries="@array/listaYears"
            app:entryValues="@array/listaYears"
            app:key="yearsMin"
            app:title="EdatMin"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="60"
            app:entries="@array/listaYears"
            app:entryValues="@array/listaYears"
            app:key="yearsMax"
            app:title="EdatMax"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="place">

        <ListPreference
            app:defaultValue="Barcelona"
            app:entries="@array/listaCuidades"
            app:entryValues="@array/listaCuidades"
            app:key="cuidad"
            app:title="Cuidad"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="distanceMin"
            app:title="Km de distancia mÃ­nimos"
            app:summaryOn="Distancia superior a los km's indicados" />

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/listaDistancia"
            app:entryValues="@array/listaDistancia"
            app:key="distance"
            app:title="Distance"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>